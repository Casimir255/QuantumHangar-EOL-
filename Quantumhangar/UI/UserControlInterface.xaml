<UserControl x:Class="QuantumHangar.UI.UserControlInterface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
             xmlns:converters="clr-namespace:QuantumHangar.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="550">

    <UserControl.Resources>
        <converters:EnumBooleanConverter x:Key="enumBooleanConverter" />
        <converters:TextToBoolConverter x:Key="TextToBoolConverter"/>
    </UserControl.Resources>

    
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row ="0" VerticalAlignment="Center" Text="Quantum Hangar" FontWeight="Bold" FontSize="16" Margin="3"/>

        <TabControl x:Name="TabController" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="TabController_SelectionChanged">
            <TabItem x:Name="Info" Header="Info">
                <Grid Name="HangarInfo" ScrollViewer.CanContentScroll="True">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row ="0" Text="Description:" Margin="3" Grid.ColumnSpan="1" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Grid.ColumnSpan="3" Grid.Row ="1" Grid.RowSpan="3" Margin="3" TextWrapping="Wrap">
                                    This plugin saves and loads grids and subgrids from a specified directory.
                    
                    
                                When multiple servers share the same directory, the hangar is cross server for everyplayer.
                     
                                You can customize time-limit, hangar storage amount (Normal players vs. Scripters), enemy player
                                All files are sorted via steamIDs in the specified directory.
                                distance check etc.<LineBreak/>
                                <LineBreak/>
                                
                    
                                <LineBreak/>
                                <Bold> 
                                    Planned Features:
                                </Bold>
                                <LineBreak/>
                               
                                -Optimizations and improvements!<LineBreak/>
                                -Fix the console block to auto-center<LineBreak/>
                                -Move ALL sell features to the block. (No player commands)<LineBreak/>
                                -String formatting (For pricing)<LineBreak/>
                                
                                            

                                <LineBreak/>
                                <LineBreak/>
                                <Bold>
                                    Note if you want to use the Hangar market, you MUST have this mod:<LineBreak/>
                                    <Hyperlink>https://steamcommunity.com/sharedfiles/filedetails/?id=2015575529</Hyperlink><LineBreak/>
                                    For tutorial on how to use:<LineBreak/>
                                    <Hyperlink>https://youtu.be/Ck0DMqywC-w</Hyperlink><LineBreak/>
                                    For reporting bugs, requests, and features:<LineBreak/>
                                    <Hyperlink>https://github.com/BobDaRoss/QuantumHangarIssues/issues</Hyperlink>
                                    
                                </Bold>
                    </TextBlock>

                </Grid>
            </TabItem>
            <TabItem x:Name="HConfig" Header="Hangar Configs">

                <StackPanel>
                    <GroupBox>
                        <GroupBox.Header>
                            <Bold>
                                Basic Hangar Configs
                            </Bold>
                        </GroupBox.Header>

                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="0" Grid.Row ="3" Text="Enable Plugin:" Margin="3" Grid.ColumnSpan="2"/>
                            <CheckBox x:Name="Enabled" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" IsChecked="{Binding PluginEnabled}"/>
                            <TextBlock Grid.Column="0" Grid.Row ="5" Text="Wait time between commands in minutes:" Margin="3" Grid.ColumnSpan="2"/>
                            <TextBlock Grid.Column="0" Grid.Row ="6" Text="Enemy Player minimum distance check in meters:" Margin="3" Grid.ColumnSpan="2"/>
                            <TextBlock Grid.Column="0" Grid.Row ="7" Text="Enemy Grid minimum distance check in meters:" Margin="3" Grid.ColumnSpan="2"/>
                            <TextBlock Grid.Column="3" Grid.Row ="7" Text="MinBlocks:" Margin="3" Grid.ColumnSpan="2"/>
                            <TextBox Grid.Column="4" Grid.Row="7" Width="60" HorizontalAlignment="Left" Margin="2" Text="{Binding GridCheckMinBlock}"/>
                            <!--GridCheckMinBlock-->
                            <TextBlock Grid.Column="0" Grid.Row ="8" Text="Default role hangar amount:" Margin="3" Grid.ColumnSpan="2"/>
                            <TextBlock Grid.Column="0" Grid.Row ="9" Text="Scripter role hangar amount:" Margin="3" Grid.ColumnSpan="2"/>

                            <TextBlock Grid.Column="0" Grid.Row ="4" Text="Hangar Directory Folder:" Margin="3" Grid.ColumnSpan="2"/>
                            <TextBox Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="3" Width="255" HorizontalAlignment="Left" Margin="2" Text="{Binding FolderDirectory}"/>
                            <TextBox Grid.Column="2" Grid.Row="5" Width="95" HorizontalAlignment="Left" Margin="2" Text="{Binding WaitTime}"/>

                            <TextBox Grid.Column="2" Grid.Row="7" Width="95" HorizontalAlignment="Left" Margin="2" Text="{Binding GridDistanceCheck}"/>
                            <TextBox Grid.Column="2" Grid.Row="6" Width="95" HorizontalAlignment="Left" Margin="2" Text="{Binding DistanceCheck}"/>

                            <TextBox Grid.Column="2" Grid.Row="8" Width="95" HorizontalAlignment="Left" Margin="2" Text="{Binding NormalHangarAmount}"/>
                            <TextBox Grid.Column="2" Grid.Row="9" Width="95" HorizontalAlignment="Left" Margin="2" Text="{Binding ScripterHangarAmount}"/>



                            <TextBlock Grid.Column="0" Grid.Row ="10" Margin="3" Grid.ColumnSpan="2" ToolTip="Only single grids in your hangar. (no connectors etc)">Allow saving of subgrids (Connectors and Gear): <LineBreak/> pistons/rotors are included by default!</TextBlock>
                            <CheckBox Grid.Row="10" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding EnableSubGrids}"/>

                            <TextBlock Grid.Row="11" Grid.Column="0" Margin="3" Grid.ColumnSpan="2" ToolTip="Saving to hangar would still not be possible if disallowed in Extended settings.">Allow loading of grids when enemy nearby:</TextBlock>
                            <CheckBox Grid.Row="11" Grid.Column="2" Grid.ColumnSpan="3" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding AllowLoadNearEnemy}">Saving to hangar would still not be allowed.</CheckBox>

                            <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row ="12" Text="Transfer Grid on load (Cross-Server without Sync)"  Margin="3" HorizontalAlignment="Left" VerticalAlignment="Center" ToolTip="This is useful if you are not using cross server sync plugins. Note there are exploits in doing this"/>
                            <CheckBox Grid.Row="12" Grid.Column="2" Grid.ColumnSpan="3" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding OnLoadTransfer}">(Will transfer Authorship/Ownership)</CheckBox>

                            <TextBlock Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" Margin="3" VerticalAlignment="Center" Text="Dig voxels on load (grid bounding box)" ToolTip="If the grid was built inside dug out voxels (e.g. underground bases), voxels may have re-generated and require digging it out to load"/>
                            <CheckBox Grid.Row="13" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding DigVoxels}"></CheckBox>

                            <TextBlock Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="2" Margin="3" VerticalAlignment="Center" Text="Nexus support (EXPERIMENTAL)" ToolTip="Relay load grid to the right server. Warning: does not yet work for all server types yet, only enable if you have a sectored setup + lobby"/>
                            <CheckBox Grid.Row="14" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding NexusAPI}"></CheckBox>
                        </Grid>
                    </GroupBox>


                    <GroupBox>
                        <GroupBox.Header>
                            <TextBlock>
                                        <Span FontWeight="Bold">Load From Save point</Span>
                                        <Span>(Options to prevent loading a grid anywhere)</Span>
                            </TextBlock>
                        </GroupBox.Header>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>




                            <RadioButton Grid.Row="0" Grid.Column="0" Margin="3" VerticalAlignment="Center" IsChecked="{Binding LoadType, Converter={StaticResource enumBooleanConverter}, ConverterParameter=ForceLoadMearPlayer}">Force Near Player</RadioButton>
                            <RadioButton  Grid.Row="0" Grid.Column="1" Margin="3" VerticalAlignment="Center" IsChecked="{Binding LoadType, Converter={StaticResource enumBooleanConverter}, ConverterParameter=Optional}">Player's Choice (T/F)</RadioButton>
                            <RadioButton Grid.Row="0" Grid.Column="2" Margin="3" VerticalAlignment="Center" IsChecked="{Binding LoadType, Converter={StaticResource enumBooleanConverter}, ConverterParameter=ForceLoadNearOriginalPosition}">Forced Original Position</RadioButton>

                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="3" VerticalAlignment="Center">Require Radius Check:</TextBlock>
                            <CheckBox Grid.Row="1" Grid.Column="0" Margin="3" VerticalAlignment="Center" HorizontalAlignment="Right" IsChecked="{Binding RequireLoadRadius}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Margin="3" VerticalAlignment="Center" HorizontalAlignment="Right">Radius (m):</TextBlock>
                            <TextBox Grid.Row="1" Grid.Column="2" Margin="3" Text="{Binding LoadRadius}" IsEnabled="{Binding RequireLoadRadius}"/>

                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.ColumnSpan="3" Grid.Row="1">
                        <GroupBox.Header>
                            <TextBlock>
                                        <Span FontWeight="Bold">Saving 	&amp; Loading</Span>
                                        <Span>(Options to restrict saving &amp; loading to specific regions)</Span>
                            </TextBlock>

                        </GroupBox.Header>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="0" Grid.Row ="0" Text="Enter GPS:" Margin="3"/>
                            <TextBox x:Name="GpsTextBox" Grid.Column="1" Grid.Row="0" Margin="3"/>
                            <Button Grid.Column="2" Grid.Row="0" Content="Add New" Margin="3" Click="AddNewGpsButton"/>

                            <Button Grid.Column="3" Grid.Row="0" Content="Delete Selected Item" Margin="3" Click="DeleteZone"/>

                            <DataGrid x:Name="ZoneRestrictions" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="1" VerticalAlignment="Top" ItemsSource="{Binding ZoneRestrictions}"  AutoGenerateColumns="False" CanUserResizeColumns="True" CanUserAddRows = "False" LostFocus="ZoneGridLostFocust">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Zone name" Binding="{Binding Path=Name,Mode=TwoWay}"/>
                                    <DataGridCheckBoxColumn Header="Saving" Binding="{Binding Path=AllowSaving,Mode=TwoWay}"/>
                                    <DataGridCheckBoxColumn Header="Loading" Binding="{Binding Path=AllowLoading,Mode=TwoWay}"/>
                                    <DataGridTextColumn Header="X" Binding="{Binding Path=X,Mode=TwoWay}" />
                                    <DataGridTextColumn Header="Y" Binding="{Binding Path=Y,Mode=TwoWay}"/>
                                    <DataGridTextColumn Header="Z" Binding="{Binding Path=Z,Mode=TwoWay}"/>
                                    <DataGridTextColumn Header="Radius (m)" Binding="{Binding Path=Radius,Mode=TwoWay}" />

                                </DataGrid.Columns>



                            </DataGrid>


                        </Grid>
                    </GroupBox>
                </StackPanel>

            </TabItem>

            <TabItem x:Name="ExtendedConfigs" Header="Extended Configs">
                <StackPanel Orientation="Vertical">

                    <GroupBox Grid.ColumnSpan="3" Grid.Row="1">
                        <GroupBox.Header>
                            <Bold>
                                Block Blacklist
                            </Bold>
                        </GroupBox.Header>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>



                            <TextBlock Grid.Column="0" Grid.Row ="0" Text="Enable Blacklist:" Margin="3" Grid.ColumnSpan="2"/>
                            <CheckBox x:Name="BlacklistEnabled" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding EnableBlackListBlocks}">(On/Off)</CheckBox>
                            <RadioButton x:Name="ServerBLimits" IsEnabled="{Binding EnableBlackListBlocks}" Grid.Column="2" Grid.Row ="0" VerticalAlignment="Center" GroupName="BlackList" IsChecked="{Binding SBlockLimits}">Server Blocklimits</RadioButton>
                            <RadioButton x:Name="CustomBLimits" Grid.Column="2" Grid.Row ="0" VerticalAlignment="Center" GroupName="BlackList" IsChecked="{Binding SBlockLimits, Converter={StaticResource TextToBoolConverter}}" HorizontalAlignment="Left" Margin="120,0,0,0">Block Limiter Plugin</RadioButton>

                        </Grid>
                    </GroupBox>


                    <GroupBox>
                        <GroupBox.Header>
                            <TextBlock>
                                        <Span FontWeight="Bold">Hangar Single-Slot limits</Span>
                                        <Span>(These are specific limits for each hangar slot on save)</Span>
                            </TextBlock>

                        </GroupBox.Header>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="280"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="0" Grid.Row ="0" Text="Max Blocks:" Margin="3"/>
                            <TextBox Grid.Column="1" Grid.Row="0" Width="140" HorizontalAlignment="Left" Margin="2" Text="{Binding SingleMaxBlocks}"/>

                            <TextBlock Grid.Column="0" Grid.Row ="1" Text="Max PCU:" Margin="3"/>
                            <TextBox Grid.Column="1" Grid.Row="1" Width="140" HorizontalAlignment="Left" Margin="2" Text="{Binding SingleMaxPCU}"/>

                            <TextBlock Grid.Column="0" Grid.Row ="2" Text="Allow Static Grids:" Margin="3"/>
                            <CheckBox Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" IsChecked="{Binding AllowStaticGrids}">(On/Off)</CheckBox>
                            <TextBlock Grid.Column="1" Grid.Row ="2" Text="Max Amount (If SubGrids Enabled): " HorizontalAlignment="Right" Margin="3"/>
                            <TextBox Grid.Column="3" Grid.Row="2" Width="80" HorizontalAlignment="Left" Margin="2" Text="{Binding SingleMaxStaticGrids}" IsEnabled="{Binding AllowStaticGrids}"/>


                            <TextBlock Grid.Column="0" Grid.Row ="3" Text="Allow Large Grids:" Margin="3"/>
                            <CheckBox Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" IsChecked="{Binding AllowLargeGrids}">(On/Off)</CheckBox>
                            <TextBlock Grid.Column="1" Grid.Row ="3" Text="Max Amount (If SubGrids Enabled): " HorizontalAlignment="Right" Margin="3"/>
                            <TextBox Grid.Column="3" Grid.Row="3" Width="80" HorizontalAlignment="Left" Margin="2" Text="{Binding SingleMaxLargeGrids}" IsEnabled="{Binding AllowLargeGrids}"/>

                            <TextBlock Grid.Column="0" Grid.Row ="4" Text="Allow Small Grids:" Margin="3"/>
                            <CheckBox Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" IsChecked="{Binding AllowSmallGrids}">(On/Off)</CheckBox>
                            <TextBlock Grid.Column="1" Grid.Row ="4" Text="Max Amount (If SubGrids Enabled): " HorizontalAlignment="Right" Margin="3"/>
                            <TextBox Grid.Column="3" Grid.Row="4" Width="80" HorizontalAlignment="Left" Margin="2" Text="{Binding SingleMaxSmallGrids}" IsEnabled="{Binding AllowSmallGrids}"/>
                        </Grid>


                    </GroupBox>

                    <GroupBox>
                        <GroupBox.Header>
                            <TextBlock>
                                        <Span FontWeight="Bold">Hangar Per Player limits</Span>
                                        <Span>(These are the limits for <Italic>PER PLAYER</Italic> hangar storage)</Span>
                            </TextBlock>

                        </GroupBox.Header>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="155"/>
                                <ColumnDefinition Width="280"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="0" Grid.Row ="0" Text="Max Blocks:" Margin="3"/>
                            <TextBox Grid.Column="1" Grid.Row="0" Width="140" HorizontalAlignment="Left" Margin="2" Text="{Binding PlayerMaxBlocks}" />

                            <TextBlock Grid.Column="0" Grid.Row ="1" Text="Max PCU:" Margin="3"/>
                            <TextBox Grid.Column="1" Grid.Row="1" Width="140" HorizontalAlignment="Left" Margin="2" Text="{Binding PlayerMaxPCU}"/>

                            <TextBlock Grid.Column="0" Grid.Row ="2" Grid.ColumnSpan="2" Text="Max Amount of Static grids:"  Margin="3"/>
                            <TextBox Grid.Column="1" Grid.Row="2" Width="140" HorizontalAlignment="Left" Margin="2" Text="{Binding PlayerMaxStaticGrids}"/>

                            <TextBlock Grid.Column="0" Grid.Row ="3" Grid.ColumnSpan="2" Text="Max Amount of Large grids: "  Margin="3"/>
                            <TextBox Grid.Column="1" Grid.Row="3" Width="140" HorizontalAlignment="Left" Margin="2" Text="{Binding PlayerMaxLargeGrids}" />

                            <TextBlock Grid.Column="0" Grid.Row ="4" Grid.ColumnSpan="2" Text="Max Amount of Small grids:"  Margin="3"/>
                            <TextBox Grid.Column="1" Grid.Row="4" Width="140" HorizontalAlignment="Left" Margin="2" Text="{Binding PlayerMaxSmallGrids}" />

                        </Grid>


                    </GroupBox>

                    <GroupBox>
                        <GroupBox.Header>
                            <TextBlock>
                                        <Span FontWeight="Bold">Gravity Configs</Span>
                                        <Span>(Configs relating to gravity)</Span>
                            </TextBlock>
                        </GroupBox.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="0" Grid.Row ="0" Text="Allow saving &amp; loading in gravity:" Grid.ColumnSpan="2" Margin="3"/>
                            <CheckBox Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" IsChecked="{Binding AllowInGravity}">(On/Off)</CheckBox>


                            <TextBlock Grid.Column="0" Grid.Row ="2" Text="Max Gravity to allow Saving/Loading in (in G's):" Grid.ColumnSpan="2" Margin="3"/>
                            <TextBox Grid.Column="2" Grid.Row="2" Width="100" HorizontalAlignment="Left" Margin="2" Text="{Binding MaxGravityAmount}" />


                        </Grid>
                    </GroupBox>





                    


                </StackPanel>
            </TabItem>

            <TabItem x:Name="AutoHangar" Header="AutoHangar">
                <StackPanel Orientation="Vertical">
                    <GroupBox>
                        <GroupBox.Header>
                            <TextBlock Height="18">
                                        <Span FontWeight="Bold">AutoHangar Configs</Span>
                                        <Span>Configs for AutoHangar</Span>
                            </TextBlock>

                        </GroupBox.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="0" Grid.Row ="0" Text="Enable Auto-Hangar:" Margin="3" Grid.ColumnSpan="2" ToolTip="Will ignore hangar limits"/>
                            <CheckBox Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding AutoHangarGrids}"/>
                            <TextBlock Grid.Column="1" Grid.Row ="0" Text="After (X) Days:" Margin="0,0,8,0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Grid.Row="0" Width="60" HorizontalAlignment="Left" Margin="2" Text="{Binding AutoHangarDayAmount}" IsEnabled="{Binding AutoHangarGrids}"/>
                            <CheckBox Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="80,0,0,0" IsChecked="{Binding DeleteRespawnPods}" IsEnabled="{Binding AutoHangarGrids}" ToolTip="This will instead delete respawn pods instead of sending them to the Hangar">
                                Delete Respawn-Pods?
                            </CheckBox>



                            <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row ="1" Text="AutoHangar grids that fall into Planet (30% below):" Margin="3" ToolTip="Scans every 5min"/>
                            <CheckBox Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" IsChecked="{Binding HangarGridsFallenInPlanet}" ToolTip="Scans every 5min">(On/Off)</CheckBox>

                            <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row ="2" Text="Keep Player's largest grid in game:" Margin="3"/>
                            <CheckBox Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" IsChecked="{Binding KeepPlayersLargestGrid}" ToolTip="Scans every 5min">(On/Off)</CheckBox>


                            <TextBlock Grid.Column="0" Grid.Row ="3" Text="AutoHangar Static Grids:" Margin="3"/>
                            <CheckBox Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" IsChecked="{Binding AutoHangarStaticGrids}">(On/Off)</CheckBox>


                            <TextBlock Grid.Column="0" Grid.Row ="4" Text="AutoHangar Large Grids:" Margin="3"/>
                            <CheckBox Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" IsChecked="{Binding AutoHangarLargeGrids}">(On/Off)</CheckBox>


                            <TextBlock Grid.Column="0" Grid.Row ="5" Text="AutoHangar Small Grids:" Margin="3"/>
                            <CheckBox Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" IsChecked="{Binding AutoHangarSmallGrids}">(On/Off)</CheckBox>
                            <TextBlock Grid.Column="1" Grid.Row ="3" Text="ST Days:" Margin="0,0,8,0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="3" Grid.Row="3" Width="60" HorizontalAlignment="Left" Margin="2" Text="{Binding AutoHangarDayAmountStation}" IsEnabled="{Binding AutoHangarGrids}"/>
                            <TextBlock Grid.Column="1" Grid.Row ="5" Text="LG Days:" Margin="0,0,8,0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="3" Grid.Row="5" Width="60" HorizontalAlignment="Left" Margin="2" Text="{Binding AutoHangarDayAmountLargeGrid}" IsEnabled="{Binding AutoHangarGrids}"/>
                            <TextBlock Grid.Column="1" Grid.Row ="4" Text="SG Days:" Margin="0,0,8,0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="3" Grid.Row="4" Width="60" HorizontalAlignment="Left" Margin="2" Text="{Binding AutoHangarDayAmountSmallGrid}" IsEnabled="{Binding AutoHangarGrids}"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox>
                        <GroupBox.Header>
                            <TextBlock Height="18">
                                        <Span FontWeight="Bold">AutoHangar Blacklist</Span>
                                        <Span>(Allows blacklisting players by SteamId)</Span>
                            </TextBlock>
                        </GroupBox.Header>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>


                            <TextBlock Grid.Column="0" Grid.Row ="0" Text="Enter Playername:" Margin="3"/>
                            <TextBox x:Name="AutoHangarNameBox" Grid.Column="1" Grid.Row="0" Margin="3"/>
                            <Button Grid.Column="2" Grid.Row="0" Content="Add New" Margin="3" Click="AddNewBlacklistPlayer"/>

                            <Button Grid.Column="3" Grid.Row="0" Content="Delete Selected Item" Margin="3" Click="DeletePlayer"/>


                            <DataGrid x:Name="AutoHangarBlacklist" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="1" VerticalAlignment="Top" ItemsSource="{Binding AutoHangarPlayerBlacklist}"  AutoGenerateColumns="False" CanUserResizeColumns="True" CanUserAddRows = "False" LostFocus="PlayerBlacklistLostFocus">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Playername" Binding="{Binding Path=Name,Mode=TwoWay}" Width="150"/>
                                    <DataGridTextColumn Header="SteamID64" Binding="{Binding Path=SteamID,Mode=TwoWay}" Width="150"/>
                                </DataGrid.Columns>



                            </DataGrid>


                        </Grid>



                    </GroupBox>


                </StackPanel>
            </TabItem>


            <TabItem x:Name="MConfig" Header="Hangar Market" IsEnabled="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>


                    <TextBlock Grid.Column="0" Grid.Row ="0" Text="Grid Market Configs:" Margin="3" Grid.ColumnSpan="2" FontWeight="Bold"/>

                    <RichTextBox Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" BorderThickness="0" Margin="3">
                        <FlowDocument>
                            <Paragraph>
                                Cross-Server Hangar market requires nexus, or other compatible player Identity Sync platforms
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                    
           
                    <CheckBox x:Name="MarketEnabled" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" IsChecked="{Binding GridMarketEnabled}"/>
                    <TextBlock Grid.Column="0" Grid.Row ="2" Text="Enable Grid Market (Requires Mod &amp; Restart):" Margin="3" Grid.ColumnSpan="2"/>
                    <TabControl Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="TabController_SelectionChanged" IsEnabled="{Binding GridMarketEnabled}">
                        <TabItem Header="Market Configs">
                            <StackPanel Orientation="Vertical">
                                <GroupBox>

                                    <GroupBox.Header>
                                        <TextBlock>
                                        <Span FontWeight="Bold">Basic Grid Market Configs</Span>
                                        </TextBlock>

                                    </GroupBox.Header>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="300"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>



                                        <TextBlock Grid.Column="0" Grid.Row ="0" Text="Fee to remove/load grid thats already on the market: " Margin="3" Grid.ColumnSpan="2" ToolTip="Prevents spamming the market/loading a grid for sale"/>
                                        <TextBox Grid.Column="1" Grid.Row="0" Width="150" HorizontalAlignment="Left" Margin="3" Text="{Binding RestockAmount}" TextChanged="TextBox_TextChanged"/>


                                        <TextBlock Grid.Column="0" Grid.Row ="1" Text="Nexus Discord Market Channel: " Margin="3" Grid.ColumnSpan="2" ToolTip="Displays buy/sell messages through discord"/>
                                        <TextBox Grid.Column="1" Grid.Row="1" Width="150" HorizontalAlignment="Left" Margin="3" Text="{Binding MarketUpdateChannel}" TextChanged="TextBox_TextChanged"/>

                                    </Grid>


                                </GroupBox>


                                <GroupBox>
                                    <GroupBox.Header>
                                        <TextBlock>
                                                    <Span FontWeight="Bold">Estimated Market Values</Span>
                                                    <Span> (Based on block count:  Price=Blocks*Value) </Span>
                                        </TextBlock>
                                    </GroupBox.Header>


                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="130"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>

                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Column="0" Grid.Row ="0" Text="Static Grid Value Multiplyer (Estimates grid price):" Margin="3" Grid.ColumnSpan="2" HorizontalAlignment="Left"/>
                                        <TextBox Grid.Column="2" Grid.Row="0" Width="150" HorizontalAlignment="Left" Margin="3" Text="{Binding StaticGridMarketMultiplier}"/>


                                        <TextBlock Grid.Column="0" Grid.Row ="1" Text="Large Grid Value Multiplyer (Estimates grid price):" Margin="3" Grid.ColumnSpan="2" HorizontalAlignment="Left"/>
                                        <TextBox Grid.Column="2" Grid.Row="1" Width="150" HorizontalAlignment="Left" Margin="3" Text="{Binding LargeGridMarketMultiplier}"/>


                                        <TextBlock Grid.Column="0" Grid.Row ="2" Text="Small Grid Value Multiplyer (Estimates grid price):" Margin="3" Grid.ColumnSpan="2" HorizontalAlignment="Left"/>
                                        <TextBox Grid.Column="2" Grid.Row="2" Width="150" HorizontalAlignment="Left" Margin="3" Text="{Binding SmallGridMarketMultiplier}"/>

                                    </Grid>
                                </GroupBox>

                                <GroupBox>
                                    <GroupBox.Header>
                                        <TextBlock>
                                                    <Span FontWeight="Bold">AutoSell Configs</Span>
                                                    <Span> (Based on Estimated Price:  Price=Est*Percent) </Span>
                                        </TextBlock>
                                    </GroupBox.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="130"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>

                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Column="0" Grid.Row ="1" Text="Autosell Hangar Grids after player logoff time:" Margin="3" Grid.ColumnSpan="2"/>
                                        <CheckBox x:Name="AutoSellHangarGrids" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="3" IsChecked="{Binding AutosellHangarGrids}"/>

                                        <TextBlock Grid.Column="0" Grid.Row ="2" Text="Autosell after last login (Days):" Margin="3" Grid.ColumnSpan="2"/>
                                        <TextBox Grid.Column="2" Grid.Row="2" Width="50" HorizontalAlignment="Left" Margin="3" IsEnabled="{Binding AutosellHangarGrids}" Text="{Binding SellAFKDayAmount}"/>

                                        <TextBlock Grid.Column="0" Grid.Row ="3" Text="Percent of Estimated Price to sell grids:" Margin="3" Grid.ColumnSpan="2"/>
                                        <TextBox Grid.Column="3" Grid.Row="3" Width="50" HorizontalAlignment="Left" Margin="3" IsEnabled="{Binding AutosellHangarGrids}" Text="{Binding AutoSellDiscountPricePercent}"/>

                                    </Grid>
                                </GroupBox>
                            </StackPanel>
                        </TabItem>
                        
                        
                        <TabItem Header="Server Offers" Visibility="Hidden">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>

                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="200"/>
                                </Grid.RowDefinitions>

                                <Button Margin="2,2,2,2" Click="NewPublicOfferButton" ToolTip="Scans the PublicOffers Dir for grids">New Offer</Button>
                                <Button Margin="2,2,2,2" Click="UpdateMarketButton" Grid.Column="1" ToolTip="Scans the PublicOffers Dir for grids">Save Market Offers</Button>


                                <DataGrid x:Name="ServerOffers" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"  VerticalAlignment="Top" ItemsSource="{Binding PublicMarketOffers}"  AutoGenerateColumns="False" CanUserResizeColumns="True" CanUserAddRows = "False" SelectionChanged="ServerOffers_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Width="150" Header="Grid name" Binding="{Binding Path=Name,Mode=TwoWay}"/>
                                        <DataGridTextColumn Width="*" Header="SBCPath" Binding="{Binding Path=FileSBCPath,Mode=TwoWay}"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <GroupBox x:Name="ServerOfferConfigBox" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" >

                                    <GroupBox.Header>
                                        <Bold>
                                            Selected Offer Config:
                                            <Run Text="{Binding Name}"/>
                                        </Bold>
                                    </GroupBox.Header>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>


                                        <TextBlock Grid.Column="0" Grid.Row ="0" Text="For Sale:" Margin="3"/>
                                        <CheckBox Grid.Column="1"  Grid.Row="0"  VerticalAlignment="Center" Margin="3" IsChecked="{Binding ForSale}"/>

                                        <TextBlock Grid.Column="0" Grid.Row ="1" Text="Price:" Margin="3"/>
                                        <TextBox Grid.Column="1" Grid.Row="1" Margin="3" Text="{Binding Price}" ToolTip="Grid Price"/>

                                        <TextBlock Grid.Column="0" Grid.Row ="2" Text="Seller Name:" Margin="3"/>
                                        <TextBox Grid.Column="1" Grid.Row="2" Margin="3" Text="{Binding Seller}" ToolTip="Grid Price"/>

                                        <TextBlock Grid.Column="0" Grid.Row ="3" Text="Seller Faction Tag:" Margin="3"/>
                                        <TextBox Grid.Column="1" Grid.Row="3" Margin="3" Text="{Binding SellerFaction}" ToolTip="Grid Price"/>

                                        <TextBlock Grid.Column="0" Grid.Row ="4" Text="Max Quantity:" Margin="3"/>
                                        <TextBox Grid.Column="1" Grid.Row="4" Margin="3" Text="{Binding TotalAmount}" ToolTip="Grid Price"/>

                                        <TextBlock Grid.Column="0" Grid.Row ="5" Text="Max Per Player:" Margin="3"/>
                                        <TextBox Grid.Column="1" Grid.Row="5" Margin="3" Text="{Binding TotalPerPlayer}" ToolTip="Grid Price"/>

                                        <TextBlock Grid.Column="0" Grid.Row ="6" Text="Total Buys:" Margin="3" Grid.ColumnSpan="2"/>
                                        <TextBlock Grid.Column="1" Grid.Row ="6" Text="{Binding TotalPerPlayer}" Margin="3"/>



                                        <TextBlock Grid.Column="2" Grid.Row ="0" Text="Description:" Margin="3" Grid.ColumnSpan="2"/>
                                        <TextBox Grid.Column="2" Grid.Row="1" Margin="3" Text="{Binding Description}" Grid.ColumnSpan="2" Grid.RowSpan="5" ToolTip="Grid Price"/>


                                    </Grid>
                                </GroupBox>

                            </Grid>

                        </TabItem>
                    </TabControl>






                </Grid>
            </TabItem>
            <TabItem x:Name="HangarEcon" Header="Econ">
                <StackPanel Orientation="Vertical">
                    <GroupBox Grid.ColumnSpan="3" Grid.Row="2">
                        <GroupBox.Header>
                            <Bold>
                                Save to Hangar Cost
                            </Bold>
                        </GroupBox.Header>

                        <Grid>
                            <Grid.Resources>

                            </Grid.Resources>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>


                            <TextBlock Grid.Column="0" Grid.Row ="0" Text="Require Currency:" Margin="3" Grid.ColumnSpan="2"/>
                            <CheckBox x:Name="RequireCredits" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding RequireCurrency}">(On/Off)</CheckBox>

                            <RadioButton x:Name="BlockCount" IsEnabled="{Binding RequireCurrency}" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row ="0" VerticalAlignment="Center" GroupName="Econ" IsChecked="{Binding HangarSaveCostType, Converter={StaticResource enumBooleanConverter}, ConverterParameter=BlockCount}" ToolTip=" (RequiredCurrency * Blocks) " Margin="80,0,0,0" >By BlockCount</RadioButton>
                            <RadioButton x:Name="PerGrid" IsEnabled="{Binding RequireCurrency}" Grid.Column="2" Grid.Row ="0" VerticalAlignment="Center" GroupName="Econ" IsChecked="{Binding HangarSaveCostType, Converter={StaticResource enumBooleanConverter}, ConverterParameter=PerGrid}" HorizontalAlignment="Left" Margin="35,0,0,0" >Price Per Grid</RadioButton>
                            <RadioButton x:Name="FixedPrice" IsEnabled="{Binding RequireCurrency}" Grid.Column="2" Grid.Row ="0" VerticalAlignment="Center" GroupName="Econ" IsChecked="{Binding HangarSaveCostType, Converter={StaticResource enumBooleanConverter}, ConverterParameter=Fixed}" HorizontalAlignment="Left" Margin="135,0,0,0" >Fixed Price</RadioButton>
                            <TextBox x:Name="StaticGBox" IsEnabled="{Binding RequireCurrency}" Grid.Column="2" Grid.Row="1" Width="150" HorizontalAlignment="Left" Margin="2" Text="{Binding CustomStaticGridCurrency}" />
                            <TextBlock x:Name="StaticGText" Grid.Column="1" Grid.Row ="1" Text="Static Grid Currency:" HorizontalAlignment="Right" Margin="3" Grid.ColumnSpan="1"/>
                            <TextBox x:Name="LargeGBox"  IsEnabled="{Binding RequireCurrency}" Grid.Column="2" Grid.Row="2" Width="150" HorizontalAlignment="Left" Margin="2" Text="{Binding CustomLargeGridCurrency}" />
                            <TextBlock x:Name="LargeGText" Grid.Column="1" Grid.Row ="2" Text="Large Grid Currency:" HorizontalAlignment="Right" Margin="3" Grid.ColumnSpan="1"/>
                            <TextBox x:Name="SmallGBox" IsEnabled="{Binding RequireCurrency}" Grid.Column="2" Grid.Row="3" Width="150" HorizontalAlignment="Left" Margin="2" Text="{Binding CustomSmallGridCurrency}" />
                            <TextBlock  x:Name="SmallGText" Grid.Column="1" Grid.Row ="3" Text="Small Grid Currency:" HorizontalAlignment="Right" Margin="3" Grid.ColumnSpan="1"/>

                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.ColumnSpan="3" Grid.Row="2">
                        <GroupBox.Header>
                            <Bold>
                                Load from Hangar Cost
                            </Bold>
                        </GroupBox.Header>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>


                            <TextBlock Grid.Column="0" Grid.Row ="0" Text="Require Currency:" Margin="3" Grid.ColumnSpan="2"/>
                            <CheckBox  Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding RequireLoadCurrency}">(On/Off)</CheckBox>

                            <RadioButton x:Name="BlockCountLoad" IsEnabled="{Binding RequireLoadCurrency}" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row ="0" VerticalAlignment="Center" GroupName="Econ" IsChecked="{Binding HangarLoadCostType, Converter={StaticResource enumBooleanConverter}, ConverterParameter=BlockCount}" ToolTip=" (RequiredCurrency * Blocks) " Margin="80,0,0,0">By BlockCount</RadioButton>
                            <RadioButton x:Name="PerGridLoad" IsEnabled="{Binding RequireLoadCurrency}" Grid.Column="2" Grid.Row ="0" VerticalAlignment="Center" GroupName="Econ" IsChecked="{Binding HangarLoadCostType, Converter={StaticResource enumBooleanConverter}, ConverterParameter=PerGrid}" HorizontalAlignment="Left" Margin="35,0,0,0">Price Per Grid</RadioButton>
                            <RadioButton x:Name="FixedPriceLoad" IsEnabled="{Binding RequireLoadCurrency}" Grid.Column="2" Grid.Row ="0" VerticalAlignment="Center" GroupName="Econ" IsChecked="{Binding HangarLoadCostType, Converter={StaticResource enumBooleanConverter}, ConverterParameter=Fixed}" HorizontalAlignment="Left" Margin="135,0,0,0">Fixed Price</RadioButton>
                            <TextBox  x:Name="StaticLGBox" IsEnabled="{Binding RequireLoadCurrency}" Grid.Column="2" Grid.Row="1" Width="150" HorizontalAlignment="Left" Margin="2" Text="{Binding LoadStaticGridCurrency}" />
                            <TextBlock x:Name="StaticLGText" Grid.Column="1" Grid.Row ="1" Text="Static Grid Currency:" HorizontalAlignment="Right" Margin="3" Grid.ColumnSpan="1"/>
                            <TextBox x:Name="LargeLGBox"  IsEnabled="{Binding RequireLoadCurrency}" Grid.Column="2" Grid.Row="2" Width="150" HorizontalAlignment="Left" Margin="2" Text="{Binding LoadLargeGridCurrency}" />
                            <TextBlock x:Name="LargeLGText" Grid.Column="1" Grid.Row ="2" Text="Large Grid Currency:" HorizontalAlignment="Right" Margin="3" Grid.ColumnSpan="1"/>
                            <TextBox x:Name="SmallLGBox" IsEnabled="{Binding RequireLoadCurrency}" Grid.Column="2" Grid.Row="3" Width="150" HorizontalAlignment="Left" Margin="2" Text="{Binding LoadSmallGridCurrency}" />
                            <TextBlock x:Name="SmallLGText" Grid.Column="1" Grid.Row ="3" Text="Small Grid Currency:" HorizontalAlignment="Right" Margin="3" Grid.ColumnSpan="1"/>

                        </Grid>
                    </GroupBox>
                </StackPanel>
            </TabItem>


            <TabItem x:Name="AConfig" Header="Debug">

                <StackPanel>
                    <GroupBox>
                        <GroupBox.Header>
                            <TextBlock>
                                        <Span FontWeight="Bold">Debug Configs</Span>
                                        <Span>(These are configs useful for debugging Hangar)</Span>
                            </TextBlock>

                        </GroupBox.Header>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row ="2" Text="Enable indepth debug log:" Margin="3" Grid.ColumnSpan="2"/>
                            <CheckBox Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" IsChecked="{Binding AdvancedDebug}"/>
                            <TextBlock Grid.Column="0" Grid.Row ="3" Text="Cross-server market port:" Margin="3" Grid.ColumnSpan="2"/>
                            <TextBox Grid.Column="2" Grid.Row="3" Width="150" HorizontalAlignment="Left" Margin="2" Text="{Binding MarketPort}"/>

                        </Grid>
                    </GroupBox>

                    <GroupBox>

                    </GroupBox>

                </StackPanel>



            </TabItem>

        </TabControl>

    </Grid>
</UserControl>
